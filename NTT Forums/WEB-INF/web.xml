<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
<welcome-file-list>
	<welcome-file>GetUser</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>GetUser</servlet-name>
	<servlet-class>UserActions.GetUser</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SetAvatar</servlet-name>
	<servlet-class>UserActions.SetAvatar</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
	<servlet-class>UserActions.DeleteCookie</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>StrutsAction</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
		<param-name>chainConfig</param-name>
			<param-value>org/apache/struts/tiles/chain-config.xml</param-value>
		</init-param>
		<init-param>
		<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>StrutsAction</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	<servlet-name>GetUser</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	<servlet-name>SetAvatar</servlet-name>
		<url-pattern>/SetAvatar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
</web-app>